<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_card_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#FFFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/take_off"
            app:tint="@color/gray" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:text="From"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <TextView
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:text="Soekarna Hatta International Airport"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:text="Jakarta, Indonesia"
                android:textColor="#555252"
                android:textSize="14dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_outline"
                android:backgroundTint="#CEEDEB"
                android:contentDescription="icon"
                android:src="@drawable/re_new"
                app:tint="@color/teal_700" />

            <View
                android:id="@+id/SplitLine_hor1"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/gray" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/touch_down"
            app:tint="@color/gray" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:text="To"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Zürich International Airport"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:text="Zürich, Switzerland"
                android:textColor="#555252"
                android:textSize="14dp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/second_card_view"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_card_view">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Departure"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/first_spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:theme="@style/Theme.MaterialComponents.Light" />

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="9.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/second_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="53dp"
                android:text="Return"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/second_spinner"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/txt_view"
                android:spinnerMode="dropdown"
                android:theme="@style/Theme.MaterialComponents.Light" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/third_card_view"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_card_view">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Adults"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/adult_spinner"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/txt_view"
                android:gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:theme="@style/Theme.MaterialComponents.Light" />

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="9.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Infants"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/child_spinner"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/txt_view"
                android:spinnerMode="dropdown"
                android:theme="@style/Theme.MaterialComponents.Light"  />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fourth_card_view"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_card_view">

        <TextView
            android:id="@+id/class_text_view"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:text="Class"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/class_text_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="Economy"
                android:textAllCaps="false"
                android:textColor="@color/gray" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="Business"
                android:textAllCaps="false"
                android:textColor="@color/gray" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="VVIP"
                android:textColor="@color/gray" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="409dp"
        android:layout_height="59dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:background="@color/teal_200"
        android:text="Search Flight"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth_card_view"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>